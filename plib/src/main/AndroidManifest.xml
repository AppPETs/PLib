<manifest package="apppets.plib"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"

        >

        <activity
            android:name="de.dailab.apppets.plib.ui.PLibSettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|locale|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="de.dailab.apppets.plib.ui.PLibInfoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|locale|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="de.dailab.apppets.plib.ui.PLibFileChooserActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|locale|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
