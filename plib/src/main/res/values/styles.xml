<resources>

    <!-- Base application theme. -->
    <style name="PLibAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PLibCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:actionBarStyle">@style/PLibWindowTitleBackground</item>


    </style>

    <style name="PLibWindowTitleBackground" parent="@android:style/Widget.Holo.Light.ActionBar">>
        <item name="android:background">@color/colorAccent</item>
    </style>


</resources>
